doctype html
html
  head
    meta(charset='utf-8')
    meta(http-equiv='X-UA-Compatible' content='IE=edge')
    meta(name='viewport' content='width=device-width, initial-scale=1')
    title PoW Shield
    link(rel='stylesheet', href='/stylesheets/style.css')
    script(src='/javascripts/bundle.min.js')
  body
    .container
      img(src='/logo.png' width='300px')
      p.rayid Ray ID: #{prefix}-#{difficulty}
      table
        tr.calculating
          td.w-full Calculating Nonce 
          td.w30.blink ...
        tr.submitting
          td.w-full Submitting Result
          td.blink ...
        tr.success
          td.w-full Redirecting
          td.blink ...
        tr.failed
          td.w-full Failed, Retrying
          td.blink ...
    script(src='/javascripts/main.min.js')
    script.
      window.onload = init(#{difficulty}, "#{prefix}", "#{redirect}")